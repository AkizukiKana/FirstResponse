<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.HomeFragment"
>

    <data>
        <variable
            name="viewModel"
            type="com.example.first_responder_app.viewModels.HomeViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/homeSwipeRefreshLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/home_incidents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/incidents"
                android:fontFamily="@font/anton_regular"
                android:textSize="35sp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/view_all_incidents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/incident_view_all_button"
                android:minHeight="48dp"
                android:paddingVertical="5dp"
                android:text="@string/view_all"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/incidents_recycler_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/incidents_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_incidents" />

            <TextView
                android:id="@+id/home_responding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/anton_regular"
                android:text="@string/home_responding"
                android:textSize="35sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/incidents_recycler_view" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/view_all_responders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/responder_view_all_button"
                android:minHeight="48dp"
                android:paddingVertical="5dp"
                android:text="@string/view_all"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/responders_recycler_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/incidents_recycler_view" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/responders_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_responding"/>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>