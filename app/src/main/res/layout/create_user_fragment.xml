<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CreateUserFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.first_responder_app.viewModels.CreateUserViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <ScrollView
            android:id="@+id/createUserScrollView"
            android:layout_width="match_parent"
            android:layout_height="400dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/createUserFirstNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anton_regular"
                    android:text="First Name"
                    android:textSize="24sp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/createUserFirstNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:text=""

                    app:layout_constraintStart_toStartOf="@+id/createUserFirstNameLabel"
                    app:layout_constraintTop_toBottomOf="@+id/createUserFirstNameLabel" />

                <TextView
                    android:id="@+id/createUserLastNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anton_regular"
                    android:text="Last Name"
                    android:textSize="24sp"

                    app:layout_constraintStart_toStartOf="@+id/createUserFirstNameEditText"
                    app:layout_constraintTop_toBottomOf="@+id/createUserFirstNameEditText" />

                <EditText
                    android:id="@+id/createUserLastNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:text=""

                    app:layout_constraintStart_toStartOf="@+id/createUserLastNameLabel"
                    app:layout_constraintTop_toBottomOf="@+id/createUserLastNameLabel" />

                <TextView
                    android:id="@+id/createUserUsernameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anton_regular"
                    android:text="Username"
                    android:textSize="24sp"

                    app:layout_constraintStart_toStartOf="@+id/createUserLastNameEditText"
                    app:layout_constraintTop_toBottomOf="@+id/createUserLastNameEditText" />

                <EditText
                    android:id="@+id/createUserUsernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:text=""

                    app:layout_constraintStart_toStartOf="@+id/createUserUsernameLabel"
                    app:layout_constraintTop_toBottomOf="@+id/createUserUsernameLabel" />

                <TextView
                    android:id="@+id/createUserPasswordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anton_regular"
                    android:text="Password"
                    android:textSize="24sp"

                    app:layout_constraintStart_toStartOf="@+id/createUserUsernameEditText"
                    app:layout_constraintTop_toBottomOf="@+id/createUserUsernameEditText" />

                <EditText
                    android:id="@+id/createUserPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:text=""

                    app:layout_constraintStart_toStartOf="@+id/createUserPasswordLabel"
                    app:layout_constraintTop_toBottomOf="@+id/createUserPasswordLabel" />

                <TextView
                    android:id="@+id/createUserEmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anton_regular"
                    android:text="Email"
                    android:textSize="24sp"

                    app:layout_constraintStart_toStartOf="@+id/createUserPasswordEditText"
                    app:layout_constraintTop_toBottomOf="@+id/createUserPasswordEditText" />

                <EditText
                    android:id="@+id/createUserEmailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:text=""

                    app:layout_constraintStart_toStartOf="@+id/createUserEmailLabel"
                    app:layout_constraintTop_toBottomOf="@+id/createUserEmailLabel" />

                <TextView
                    android:id="@+id/createUserPhoneNumberLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anton_regular"
                    android:text="Phone Number"
                    android:textSize="24sp"

                    app:layout_constraintStart_toStartOf="@+id/createUserEmailEditText"
                    app:layout_constraintTop_toBottomOf="@+id/createUserEmailEditText" />

                <EditText
                    android:id="@+id/createUserPhoneNumberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:text=""

                    app:layout_constraintStart_toStartOf="@+id/createUserPhoneNumberLabel"
                    app:layout_constraintTop_toBottomOf="@+id/createUserPhoneNumberLabel" />

                <TextView
                    android:id="@+id/createUserAddressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anton_regular"
                    android:text="Address"
                    android:textSize="24sp"

                    app:layout_constraintStart_toStartOf="@+id/createUserPhoneNumberEditText"
                    app:layout_constraintTop_toBottomOf="@+id/createUserPhoneNumberEditText" />

                <EditText
                    android:id="@+id/createUserAddressEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:text=""

                    app:layout_constraintStart_toStartOf="@+id/createUserAddressLabel"
                    app:layout_constraintTop_toBottomOf="@+id/createUserAddressLabel" />

                <TextView
                    android:id="@+id/createUserFireDepartmentIdLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anton_regular"
                    android:text="Fire Department ID"
                    android:textSize="24sp"

                    app:layout_constraintStart_toStartOf="@+id/createUserAddressEditText"
                    app:layout_constraintTop_toBottomOf="@+id/createUserAddressEditText" />

                <EditText
                    android:id="@+id/createUserFireDepartmentIdEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:text=""

                    app:layout_constraintStart_toStartOf="@+id/createUserFireDepartmentIdLabel"
                    app:layout_constraintTop_toBottomOf="@+id/createUserFireDepartmentIdLabel" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createUserCreateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/standard_button_primary"
            android:text="@string/create"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginTop="32dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createUserScrollView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>