<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-25dp">

            <TextView
                android:id="@+id/address_text_view"
                android:layout_width="180dp"
                android:layout_height="22dp"
                android:layout_margin="@dimen/margin_from_side"
                android:layout_marginVertical="@dimen/margin_from_side"
                android:layout_marginStart="36dp"
                android:hint="Address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/box_number_text_view"
                android:layout_width="180dp"
                android:layout_height="22dp"
                android:hint="Box #"
                android:layout_margin="@dimen/margin_from_side"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address_text_view" />

            <TextView
                android:id="@+id/units_text_view"
                android:layout_width="150dp"
                android:layout_height="21dp"
                android:layout_margin="@dimen/margin_from_side"
                android:layout_marginTop="12dp"
                android:hint="Units"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

            <TextView
                android:id="@+id/sirens_text_view"
                android:layout_width="150dp"
                android:layout_height="21dp"
                android:hint="Lights/Sirens"
                android:layout_margin="@dimen/margin_from_side"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/units_text_view" />

            <TextView
                android:id="@+id/incident_type_text_view"
                android:layout_width="177dp"
                android:layout_height="22dp"
                android:hint="Incident Type"
                android:layout_margin="@dimen/margin_from_side"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/box_number_text_view" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="156dp"
                android:layout_height="26dp"
                android:ems="10"
                android:hint="Date"
                android:layout_margin="@dimen/margin_from_side"
                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Officer Report"

            app:layout_constraintTop_toBottomOf="@id/top_constraint_layout"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="186dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_margin="@dimen/margin_from_side"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>