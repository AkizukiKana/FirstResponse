<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="7dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/announcement_constraint_layout"
        android:background="@drawable/incident_row_background"
        android:paddingVertical="15dp"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rowlayout_eventGroup_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnPrimary"
            android:paddingVertical="5dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/row_layout_event_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <TextView
            android:id="@+id/row_layout_event_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3/2/22 12:23"
            android:paddingStart="15dp"
            android:textSize="14sp"

            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/row_layout_event_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintEnd_toStartOf="@+id/row_layout_event_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rowlayout_eventGroup_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>