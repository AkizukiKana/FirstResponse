<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AdminEditUserFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/adminEditUserUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/anton_regular"

            android:text="@string/units"
            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/rankSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"

            app:layout_constraintStart_toStartOf="@id/adminEditUserUserName"
            app:layout_constraintTop_toBottomOf="@id/adminEditUserUserName"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/adminEditUserUpdateRankButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/standard_button_primary"
            android:text="Update rank"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginTop="32dp"

            app:layout_constraintTop_toBottomOf="@id/rankSpinner"
            app:layout_constraintStart_toStartOf="@id/rankSpinner"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/addGroupSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"

            app:layout_constraintStart_toStartOf="@id/adminEditUserUpdateRankButton"
            app:layout_constraintTop_toBottomOf="@id/adminEditUserUpdateRankButton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/adminEditUserAddGroupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/standard_button_primary"
            android:text="Add user to group"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginTop="32dp"

            app:layout_constraintTop_toBottomOf="@id/addGroupSpinner"
            app:layout_constraintStart_toStartOf="@id/addGroupSpinner"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/removeGroupSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"

            app:layout_constraintStart_toStartOf="@id/adminEditUserAddGroupButton"
            app:layout_constraintTop_toBottomOf="@id/adminEditUserAddGroupButton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/adminEditUserRemoveGroupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/standard_button_primary"
            android:text="Remove user from group"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginTop="32dp"

            app:layout_constraintTop_toBottomOf="@id/removeGroupSpinner"
            app:layout_constraintStart_toStartOf="@id/removeGroupSpinner"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/adminEditUserMakeAdminButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/standard_button_primary"
            android:text=""
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginTop="32dp"

            app:layout_constraintTop_toBottomOf="@id/adminEditUserRemoveGroupButton"
            app:layout_constraintStart_toStartOf="@id/adminEditUserRemoveGroupButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>