<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="Theme.First_responder_app" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:colorBackground">@color/darker_gray</item>
        <item name="backgroundColor">@color/darker_gray</item>
        <item name="chipBackgroundColor">@color/gray</item>
    </style>


    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/darker_gray</item>
    </style>
</resources>